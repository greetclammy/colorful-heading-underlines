{
  "compilerOptions": {
    "baseUrl": ".",
    "inlineSourceMap": true,
    "inlineSources": true,
    "module": "ESNext",
    "target": "ES6",
    "allowJs": true,
    "noImplicitAny": true,
    "moduleResolution": "node",
    "isolatedModules": true,
    "strictNullChecks": true,
    "lib": ["DOM", "DOM.Iterable", "ES2015", "ES2016", "ES2017"]
  },
  "include": ["src/**/*.ts"]
}
